{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "taskName": "cmake",
            "type": "shell",
            "command": "/usr/local/bin/cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."         
        },
        {
            "taskName": "make",
            "type": "shell",
            "command": "/usr/bin/make -j 8 all"
        }
    ]
}